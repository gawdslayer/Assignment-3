<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h1 class="display-5 mb-0"><i class="fas fa-exclamation-triangle me-2"></i><%= title || 'Error Occurred' %></h1>
                </div>
                <div class="card-body text-center">
                    <% if (typeof error_message !== 'undefined' && error_message) { %>
                        <p class="lead text-danger"><%= error_message %></p>
                    <% } else { %>
                        <p class="lead">An unexpected error occurred. Please try again later.</p>
                    <% } %>

                    <% if (typeof stack !== 'undefined' && stack) { %>
                        <div class="alert alert-secondary mt-4 text-start">
                            <strong class="d-block mb-2">Developer Details (Stack Trace):</strong>
                            <pre class="mb-0" style="white-space: pre-wrap; word-break: break-all;"><%= stack %></pre>
                        </div>
                    <% } %>
                </div>
                <div class="card-footer text-center">
                    <a href="/" class="btn btn-primary me-2">
                        <i class="fas fa-home me-1"></i> Go to Homepage
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div> 